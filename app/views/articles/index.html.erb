<h1 class = "text-center mt-4">Listing all articles</h1>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
        <div class="card shadow mb-5 bg-white rounded text-center">
          <div class="card-header font-italic">
            by JT
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>            
            
            <%= link_to "Show", article_path(article), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-primary" %>
            <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>