<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
      <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
            </div>
        </div>
        <div class="form-group row text-left">
            <%= f.label :description, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_area :description, rows: 10, class: "form-control description-field shadow rounded", placeholder: "Description of article" %>
            </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-offset-2 col-sm-12"
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox ml-3") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to all articles ]', articles_path, class: "text-info" %>
  </div>
</div>
