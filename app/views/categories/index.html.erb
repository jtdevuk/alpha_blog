<h1 class="text-center">Listing all categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<% @categories.each do |category| %>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card shadow mb-5 bg-white rounded text-center">
          <div class="card-header font-italic">
            <ul>
              <%= link_to "#{category.name}", category_path(category) %>
              <p>
                <small><%= pluralize(category.articles.count, "article") %></small>
              </p>
              <p>
                <% if logged_in? and current_user.admin? %>
                  <span class="badge"><%= link_to "Edit category name", edit_category_path(category) %></span>
                <% end %>
              </p>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
